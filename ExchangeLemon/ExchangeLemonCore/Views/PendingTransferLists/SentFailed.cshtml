@model IEnumerable<BlueLight.Main.MvPendingTransferList>

@{
    ViewData["Title"] = "Pending Transfer";
}


@*<h2>Index</h2>*@
<br/>






<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrencyCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsApprove)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddressDestination)
            </th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrencyCode)
            </td>
            <td>
                @item.Amount.ToString("F8")
                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsApprove)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddressDestination)
            </td>
          
        </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="ReSend" asp-controller="PendingTransferLists">ReSend</a>
</div>

